<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.idanch.NewItemDialogController">
    <headerText>
        Add a new ToDo item..
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Title: " GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="titleText" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="Description: " GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextArea fx:id="descriptionTextArea" wrapText="true"
                      GridPane.rowIndex="1" GridPane.columnIndex="1" prefRowCount="5" />
            <Label text="Due: " GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <DatePicker fx:id="dueDate" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        </GridPane>
    </content>
</DialogPane>
